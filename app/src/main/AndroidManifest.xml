<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tum.nst.pushbotcontrol"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BotActivity"
            android:label="@string/title_activity_bot"></activity>
        <activity
            android:name=".ActivityAccelerometre"
            android:label="@string/title_activity_accelerometer"></activity>
        <activity
            android:name=".ActivityBoutton"
            android:label="@string/title_activity_activity_boutton"></activity>
        <activity
            android:name=".ActivityButtons"
            android:label="@string/title_activity_activity_buttons"></activity>
        <activity
            android:name=".ActivityTouch"
            android:label="@string/title_activity_activity_touch"></activity>
        <activity
            android:name=".IPActivity"
            android:label="@string/title_activity_ip"></activity>
        <activity
            android:name=".ActivityBotOptions"
            android:label="@string/title_activity_botoptions"></activity>
        <activity
            android:name=".ActivityVideo"
            android:label="@string/title_activity_botoptions"></activity>

    </application>

</manifest>