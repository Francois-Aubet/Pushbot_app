<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ToggleButton
        android:id="@+id/LightButton"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cxem_logo"
        android:layout_centerHorizontal="true"
        android:textOff="@string/accele_off"
        android:textOn="@string/accele_on"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/activity_side_margin"
        android:layout_weight="0.04"
        android:checked="false" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.91"
        android:visibility="invisible" />


    <Button
        android:id="@id/backacc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/return_btn"
        android:layout_gravity="bottom"/>


</LinearLayout>