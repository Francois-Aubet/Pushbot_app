<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.tum.nst.pushbotcontrol.IPActivity" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:ems="10"
        android:id="@+id/editIpNumber"
        android:singleLine="true"
        android:gravity="center"
        tools:minWidth="@android:dimen/notification_large_icon_height"
        android:hint="@string/text_activity_ip"
        android:text="192.168.43."
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editNameBot"
        android:gravity="center"
        tools:minWidth="@android:dimen/notification_large_icon_height"
        android:hint="@string/text_activity_ip_name"
        android:layout_alignBaseline="@+id/editIpNumber"
        android:layout_alignBottom="@+id/editIpNumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp" />

</RelativeLayout>
