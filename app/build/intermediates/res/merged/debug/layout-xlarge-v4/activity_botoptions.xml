<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_side_margin"
    android:paddingRight="@dimen/activity_side_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.4">

        <CheckBox
            android:id="@+id/robotchainled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkBox_robotchainled"
            android:checked="false"
            android:layout_weight="0.12" />

        <CheckBox
            android:id="@+id/robotchain"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="@string/checkBox_robotchain"
            android:checked="false"
            android:layout_weight="0.16" />

        <CheckBox
            android:id="@+id/robottracking"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="@string/checkBox_robottracking"
            android:checked="false"
            android:layout_weight="0.16" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.57"
            android:visibility="invisible" />

        <Button
            android:id="@id/backopt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_done"
            android:layout_gravity="bottom"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.20">

        <TextView
            android:id="@+id/texteditSensibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texteditSensibility"
            android:textSize="16sp"
            android:textColor="@android:drawable/screen_background_dark" />


        <EditText
            android:id="@+id/editSensibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/text_hint_sensibility"
            android:layout_gravity="center"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/texteditDecayDVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texteditDecayDVS"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:drawable/screen_background_dark" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editDecayDVS"
            android:singleLine="true"
            android:gravity="center"
            tools:minWidth="@android:dimen/notification_large_icon_height"
            android:hint="@string/text_hint_decay"
            android:layout_gravity="center"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="invisible" />

        <Button
            android:id="@id/btnsetdefault"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_default"/>


    </LinearLayout>


</LinearLayout>