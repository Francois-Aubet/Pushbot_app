<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_side_margin"
    android:paddingRight="@dimen/activity_side_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.tum.nst.pushbotcontrol.ActivityButtons"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:visibility="invisible" />


        <Button
            android:id="@+id/left"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:layout_gravity=""/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="40.5"
            android:visibility="invisible" />


        <Button
            android:id="@id/backbut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/return_btn"
            android:layout_gravity="bottom"/>


    </LinearLayout>





    <Button
        android:id="@+id/right"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/right"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="488dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <CheckBox
            android:id="@+id/laser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_laser"
            android:layout_gravity="bottom"/>

  <!--      <CheckBox
            android:id="@+id/buzzer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_buzzer"
            android:layout_gravity="bottom"  /> -->



    </LinearLayout>




    <LinearLayout
        android:layout_width="488dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <Button
            android:layout_width="575dp"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <Button
            android:id="@+id/forward"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/forward" />

        <Button
            android:id="@+id/stop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Stop"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/backward"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/backward"
            android:layout_width="300dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="30"
            />
    </LinearLayout>


</LinearLayout>
